html(lang="en")
	head
		title We Browse In Public
		meta(name="description", content="Stream your browsing anonymously to start chats.")
		link(rel="stylesheet", type="text/css", href="/css/all.css")
		script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		script(type="text/javascript", src="/js/underscore.js")
		script(type="text/javascript", src="/js/backbone.js")
		script(type="text/javascript", src="/socket.io/socket.io.js")
		script(type="text/javascript", src="/models/models.js")
		script(type="text/javascript", src="/views/views.js")
		script(type="text/javascript", src="/js/main.js")
	body
		div.masthead
			div.container.container-narrow
				h1#logo We Browse In Public
				ul.steps
					li
						a(id="signup", href="#") <strong>Download</strong> for chrome
						span.step 1
					li
						h2 Show off
						p your live browsing activity with 100% anonymity.
						span.step 2
					li
						h2 Become champion
						p of the internet or mayor of a site.
						span.step 3
		div.sub-head
			div.container.container-narrow
				div.stats.clearfix
					span.pull-left
						<strong id="client_count">0</strong> online
					span.pull-right
						<strong id="link_count">0</strong> links shared today
		div.container.container-narrow.visits-stream-container

	script(type="text/template", id="visitView-template")
		<% if (isImage) { %>
		<a href="<%= link %>">
		<img src="<%= link %>">		
		</a>
		<% } else if (isYoutube) { %>
		<a href="<%= link %>">
		<% if (title) { %>
		<h3><%- title %></h3>
		<% } %>
		<iframe width="560" height="315" src="http://www.youtube.com/embed/<%= link.split('v=')[1] %>" frameborder="0" allowfullscreen></iframe>
		</a>
		<% } else { %>
		<a href="<%= link %>">
		<% if (title) { %>
		<h3><%- title %></h3>
		<% } %>
		<span><%= link %></span>
		</a>
		<% } %>
		<% if (user_id) { %>
		<a href="/user/<%= user_id %>"><span>User: <%= user_id %></span></a>
		<% } %>
		<% if (domain_id) { %>
		<span>Domain: <%= domain.domain %></span>
		<% } %>
